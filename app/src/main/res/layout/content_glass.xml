<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9AEB9D"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Glass"
    tools:showIn="@layout/activity_glass">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Select All That Apply:"
            android:textSize="24dp" />

        <Switch
            android:id="@+id/clean"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_height="70dp"
            android:text="Clean Bottle/Jar" />

        <Switch
            android:id="@+id/cookware"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_height="70dp"
            android:text="Cookware" />

        <Switch
            android:id="@+id/mirror"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_height="70dp"
            android:text="Mirror or Window" />

        <TextView
            android:id="@+id/recyclable"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:gravity="center"
            android:text="It's Recyclable!"
            android:textSize="45dp" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/recycle"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="Recycle Item!" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
